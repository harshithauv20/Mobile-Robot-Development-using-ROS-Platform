<launch>

  <!-- ═══════════════════════════════════════════════════════
       teleop.launch
       Launches keyboard teleop for Arjuna simulation.
       Run AFTER arjuna_sim.launch.

       Keys:
         i   = forward        ,   = backward
         j   = turn left      l   = turn right
         k   = STOP
         q/z = speed up / slow down
  ═══════════════════════════════════════════════════════ -->

  <node name="teleop_keyboard"
        pkg="teleop_twist_keyboard"
        type="teleop_twist_keyboard.py"
        output="screen"
        launch-prefix="xterm -e"/>

</launch>
