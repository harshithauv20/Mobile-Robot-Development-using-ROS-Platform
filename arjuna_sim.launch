<launch>

  <!-- ═══════════════════════════════════════════════════════
       arjuna_sim.launch
       Launches: Gazebo world + robot + all sensor plugins
       Topics started automatically by plugins:
         /scan            (LIDAR)
         /camera/image_raw (Camera)
         /imu/data        (IMU)
         /odom            (Wheel odometry)
         /cmd_vel         (Drive input — publish here to move)
  ═══════════════════════════════════════════════════════ -->

  <!-- Load robot URDF into parameter server -->
  <param name="robot_description"
         textfile="$(find arjuna_gazebo)/urdf/arjuna_sim.urdf"/>

  <!-- Start Gazebo with our custom room world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"   value="$(find arjuna_gazebo)/worlds/arjuna_world.world"/>
    <arg name="paused"       value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui"          value="true"/>
    <arg name="headless"     value="false"/>
    <arg name="debug"        value="false"/>
    <arg name="verbose"      value="false"/>
  </include>

  <!-- Spawn robot in Gazebo at centre (0, 0), 0.1 m above ground -->
  <node name="spawn_robot"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-urdf
              -model arjuna_sim
              -param robot_description
              -x 0.0 -y 0.0 -z 0.1
              -R 0.0 -P 0.0 -Y 0.0"
        output="screen"/>

  <!-- Publish joint states for all 4 wheels -->
  <node name="joint_state_publisher"
        pkg="joint_state_publisher"
        type="joint_state_publisher"
        output="screen"/>

  <!-- Publish TF transforms for all robot links -->
  <node name="robot_state_publisher"
        pkg="robot_state_publisher"
        type="robot_state_publisher"
        output="screen"/>

</launch>
